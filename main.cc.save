#include <SFML/Graphics.hpp>

#include "classes/game.h"

Game* game;

int main(int argc, char* argv[]) {
  // init rand or something

  game = new Game();
  game->init();

  while (game->isRunning()) {
    game->handleEvents();
    game->update();
    game->render();
  }
  game->clean();
  delete game;
  return EXIT_SUCCESS;
}
